{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Migration Templates",
  "description": "Transformation templates and before/after examples for Python to TypeScript migration",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d{4}\\.\\d{2}$"
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "templates": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/migrationTemplate"
      }
    }
  },
  "required": ["version", "generatedAt", "templates"],
  "definitions": {
    "migrationTemplate": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": ["class", "function", "decorator", "context-manager", "data-structure", "async", "error-handling", "module"]
        },
        "description": {
          "type": "string"
        },
        "pythonPattern": {
          "type": "string",
          "description": "Regex or AST pattern to match"
        },
        "before": {
          "type": "object",
          "properties": {
            "code": {
              "type": "string"
            },
            "language": {
              "type": "string",
              "const": "python"
            },
            "description": {
              "type": "string"
            }
          },
          "required": ["code", "language"]
        },
        "after": {
          "type": "object",
          "properties": {
            "code": {
              "type": "string"
            },
            "language": {
              "type": "string",
              "const": "typescript"
            },
            "description": {
              "type": "string"
            }
          },
          "required": ["code", "language"]
        },
        "transformationRules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "rule": {
                "type": "string"
              },
              "explanation": {
                "type": "string"
              }
            },
            "required": ["rule"]
          }
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["id", "name", "category", "before", "after"]
    }
  }
}